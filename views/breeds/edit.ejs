<%- include("../partials/header") %>

  <div class="container">
    <h1 class="text-center">Edit Post</h1>
    <div class="row">
      <div style="width: 45%; margin: 25px auto;">
        <form action="/breeds/<%= breed._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" maxlength="20" type="text" name="breed[name]" value="<%= breed.name %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="breed[age]" value="<%= breed.age %>" min="5" step="1">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="breed[standard]" value="<%= breed.standard %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="breed[img]" value="<%= breed.img %>">
          </div>
          <div class="form-group">
            <textarea class="form-control" name="breed[desc]" rows="8"><%= breed.desc %></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-block btn-info" type="input">Save</button>
          </div>
        </form>
        <a href="/breeds/<%= breed._id %>">Go Back</a>
      </div>
    </div>
  </div>

<%- include("../partials/footer") %>
