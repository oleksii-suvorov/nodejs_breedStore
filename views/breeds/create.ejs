<%- include("../partials/header") %>

  <div class="container">
    <h1 class="text-center">Insert a New Breed</h1>
    <div class="row">
      <div style="width: 30%; margin: 25px auto;">
        <form action="/breeds/create" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" maxlength="20" name="breed[name]" placeholder="breed name">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="breed[age]" placeholder="breed's life span" min="5" step="1">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="breed[standard]" placeholder="standards">
          </div>
          <div class="form-group">
            <input class="form-control" type="years" name="breed[img]" placeholder="image url">
          </div>
          <div class="form-group">
            <textarea class="form-control" name="breed[desc]" rows="8" placeholder="description"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-block btn-info" type="input">Save</button>
          </div>
        </form>
        <a href="/breeds">Go Back</a>
      </div>
    </div>
  </div>

<%- include("../partials/footer") %>
