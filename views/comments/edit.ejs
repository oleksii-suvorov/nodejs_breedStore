<%- include("../partials/header") %>

  <div class="container">
    <h1 class="text-center">Edit comment</h1>
    <div class="row">
      <div style="width: 30%; margin: 25px auto;">
        <form action="/breeds/<%= breedId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <textarea class="form-control" type="text" name="comment[text]"><%= comment.text %></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-block btn-info" type="input">Edit</button>
          </div>
        </form>
        <a href="/breeds/<%= breedId %>">Go Back</a>
      </div>
    </div>
  </div>

<%- include("../partials/footer") %>
