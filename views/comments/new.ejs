<%- include("../partials/header") %>

  <div class="container">
    <h1 class="text-center">Add new Comment</h1>
    <div class="row">
      <div style="width: 40%; margin: 25px auto;">
        <form action="/breeds/<%= breed._id %>/comments" method="POST">
          <div class="form-group">
            <textarea class="form-control" type="text" name="comment[text]" rows="8" placeholder="comment"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-block btn-info" type="input">Post</button>
          </div>
        </form>
        <a href="/breeds/<%= breed._id %>">Go Back</a>
      </div>
    </div>
  </div>

<%- include("../partials/footer") %>
